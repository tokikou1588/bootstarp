@model QuickBootstrap.Models.ProfileChangePasswordRequest
@{
    ViewBag.Title = "修改密码";
}

<div class="row">

    <div class="col-md-2">

        @Html.Partial("Shared/_QuickMenu")

    </div>
    <div class="col-md-10 ">

        <ol class="breadcrumb">
            <li><a href="/">管理后台</a></li>
            <li><a href="/Profile/">个人中心</a></li>
            <li class="active">修改密码</li>
        </ol>


        <div class="container" style="width: 600px;">

            @using (Html.BeginForm("ChangePassword", "Profile", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.UserName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.HiddenFor(model => model.UserName)
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", style = "width: 280px", disabled = "" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CurrentPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model.CurrentPassword, new { @class = "form-control", style = "width: 280px" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NewPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control", style = "width: 280px" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", style = "width: 280px" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.ValidationSummary(false)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">保存</button>
                    </div>
                </div>
            }

        </div>
    </div>
</div>